<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.library.bookwave.repository.interfaces.BookRepository">
    
    <!-- 전체 책을 조회하는 쿼리 -->
    <select id="readAllBook" resultType="com.library.bookwave.repository.model.Book">
        SELECT * FROM book_tb
    </select>
    
    <!-- 필터링 걸린 책을 조회하는 쿼리 -->
     <select id="readBook" resultType="com.library.bookwave.repository.model.Book">
        SELECT * FROM book_tb 
        WHERE category LIKE CONCAT('%', #{category}, '%') 
        AND title LIKE CONCAT('%', #{search}, '%') 
        LIMIT #{limit} OFFSET #{offset}
    </select>
    
    <!-- 필터링 걸린 책 갯수를 구하는쿼리 -->
    <select id="countByBook" resultType="int">
        SELECT count(*) FROM book_tb 
        WHERE category LIKE CONCAT('%', #{category}, '%') 
        AND title LIKE CONCAT('%', #{search}, '%') 
    </select>
    
</mapper>
